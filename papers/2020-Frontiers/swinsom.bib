issn = {15729672},
journal = {Space Science Reviews},
keywords = {Coronal holes,Coronal streamers,Heliosphere,Solar corona,Solar wind},
number = {3-4},
pages = {1345--1384},
publisher = {Springer Science+Business Media B.V.},
title = {{Origins of the Ambient Solar Wind: Implications for Space Weather}},
url = {http://dx.doi.org/10.1007/s11214-017-0416-y},
volume = {212},
year = {2017}
}
