doi = {10.1029/1999JA000400},
file = {:home/amaya/MEGAsync/Mendeley/Richardson, Cliver, Cane - 2000 - Sources of geomagnetic activity over the solar cycle Relative importance of coronal mass ejections, hi.pdf:pdf},
issn = {0148-0227},
